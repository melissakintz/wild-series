{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <h2>{{ program.title }} - Categorie: {{ program.category.name }}</h2>
        <img src="{{ program.poster }}" width="300" alt="{{ program.title }}">
        <p> {{ program.summary }}</p>

        {% for season in program.seasons %}
            <p>Saison {{ season.number }} - {{ season.year }}</p>
            <p>{{ season.description }}</p>
            <a href='{{ path("program_season_show", { program: program.id,  season: season.id }) }}'>Voir la saison</a>
        {% endfor %}
        <br/>
        <strong>Acteurs :</strong>
        <ul>
                {% for actor in program.actors %}
                        <li><a href="{{ path("actor_show", {id: actor.id}) }}">{{ actor.name }} </a></li>
                    {% else %}
                        <li>Aucun acteur pour cette s√©rie</li>
                    {% endfor %}
            </ul>
    </div>
{% endblock %}